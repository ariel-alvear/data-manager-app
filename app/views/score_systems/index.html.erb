<p id="notice"><%= notice %></p>

<h1>Score Systems</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @score_systems.each do |score_system| %>
      <tr>
        <td><%= score_system.name %></td>
        <td><%= score_system.description %></td>
        <td><%= link_to 'Show', score_system %></td>
        <td><%= link_to 'Edit', edit_score_system_path(score_system) %></td>
        <td><%= link_to 'Destroy', score_system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Score System', new_score_system_path %>
