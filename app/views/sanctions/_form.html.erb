<%= simple_form_for(@sanction) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs col-md-8">
    <%= f.association :league_race,
                       as: :hidden,
                       input_html: { value: @league_race.id } %>
    
    <%= f.association :race_participant, collection: league_race_name_and_ids(@league_race.id),
                                         input_html: { class: 'form-control mb-2' } %>
    <%= f.input :description, input_html: { class: 'form-control mb-2' } %>
    <%= f.input :video_url, input_html: { class: 'form-control mb-2' } %>
    <%= f.input :penalized_points, input_html: { class: 'form-control mb-2' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Crear nueva sanciÃ³n', class: "btn btn-primary" %>
  </div>
<% end %>
