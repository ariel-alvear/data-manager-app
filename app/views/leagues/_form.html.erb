
<%= simple_form_for(@league) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="col-md-4">
    <div class="form-inputs">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :description, class: 'form-label' %>
      <%= f.text_field :description, class: 'form-control' %>
    <br>
  </div>
    <%= f.association :score_system, as: :radio_buttons, label: 'Sistema de puntaje' %>
  </div>
  <br>
  <h4>Participantes</h4>
  <%= f.fields_for :league_participants do |league_participant| %>
    <%= render 'league_participant_fields', f: league_participant %>
  <% end %>

  <div class="link">
    <%= link_to_add_association "Agregar otro participante", f, :league_participants %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, 'Crear nueva temporada', class: "btn btn-primary" %>
  </div>
<% end %>
