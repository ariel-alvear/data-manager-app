<p id="notice"><%= notice %></p>

<h1>League Races</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Race track</th>
      <th>League</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @league_races.each do |league_race| %>
      <tr>
        <td><%= league_race.name %></td>
        <td><%= league_race.description %></td>
        <td><%= league_race.race_track_id %></td>
        <td><%= league_race.league_id %></td>
        <td><%= link_to 'Show', league_race %></td>
        <td><%= link_to 'Edit', edit_league_race_path(league_race) %></td>
        <td><%= link_to 'Destroy', league_race, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

